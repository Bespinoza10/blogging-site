<div class="container">
  <div class="row">
    <div class="col-md-12 page-titles no-padding">
      <div class="col-md-8">
        <h1 class="welcome-header title wow fadeInDown">My Showcase <span class="comma">,</span></h1>
      </div>
      <div class="col-md-4">
        <h1 class="perspective-p wow fadeInDown">Just Simply Stuff I've Done</h1>
        <p class="wow fadeInDown"></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 center-block">
      <% @projects.each do |project| %>
        <div class="col-md-4 border">
          <h1 style="text-align:center;"><%= link_to project.title, project, class: "blog-name" %></h1>
          <p class="dates" style="text-align:center;"><%= project.created_at.strftime('%A, %B %d') %></p>
          <hr style="width: 10%;">
        </div>
      <%end%>
      <!-- <hr style="height: 100px; width: 2px;"> -->
    </div>
  </div>
</div>