<div class="container">
  <div class="row" style="padding-bottom: 5%;">
    <div class="col-md-6 center-block">
      <h1 style="text-align: center;"><%= @project.title %></h1>
      <p class="dates" style="text-align:center;"> <%= @project.created_at.strftime("%A, %B %d") %> </p>
      <br>
      <hr>
      <br>
      <p><%= markdown @project.description %></p>
      <br>
      <div class="col-sm-6 center-block"><a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a></div>
    </div>
    <div class="col-md-6 center-block" style="padding-top: 20px;">
      <a><%= link_to "Edit", edit_project_path(@project), {class: "btn btn-default"} %></a>
      <a><%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this poor lonely project? If so HaHa poor project!" }, class: "btn btn-default" %></a>
    </div>
  </div>
</div>
